y1_data_num$ple_p_binary <- ifelse(y1_data_num$ple_p_total == 0, 0, 1)

#youth report total
y1_data_num$ple_y_total <- with(y1_data_num,ple_y1_y_died+
                                     ple_y1_y_newsib+
                                     ple_y1_y_newjob+
                                     ple_y1_y_step+  
                                     ple_y1_y_jail+
