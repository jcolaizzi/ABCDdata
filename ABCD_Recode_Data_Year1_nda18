##### LABEL AS YEAR 1 ##############
####################################

icol <- which(names(y1_data_num) %in% c("src_subject_id", "eventname", "abcd_site", "subjectid", "isTwin","FamilyID"))
colnames(y1_data_num)[-icol] <- paste(colnames(y1_data_num)[-icol], "y1", sep = "_")

#####################################
############# SAVE ##################
#####################################
saveRDS(y1_data_num, file = "/Volumes/labs/ABCD_studydata/workbench.Colaizzi/ABCD_Gather_Data/ABCD_YEAR1_bx_coded.Rds")
save(y1_data_num,file = "/Volumes/labs/ABCD_studydata/workbench.Colaizzi/ABCD_Gather_Data/ABCD_YEAR1_bx_coded.RData")
write.csv(y1_data_num,file ="/Volumes/labs/ABCD_studydata/workbench.Colaizzi/ABCD_Gather_Data/ABCD_YEAR1_bx_coded.csv")  

